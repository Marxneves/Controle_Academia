{% extends "layout.njk" %}


{% block head %}
<title>Home - {{ data.name }}</title>
{% endblock %}

{% block content %}


        <div id="wrapper">
            <img src="{{data.avatar_url}}" alt="Imagem de {{data.name}}">
            <h1>{{data.name}}</h1>
            <h2>{{data.role}}</h2>
            <p>{{data.description}}</p>
        </div>

        <div id="links_footer" class="links">
        {% for link in data.link %}
            <a href="{{link.url}}" target="_blank">{{ link.name }}</a>
        {% endfor %}
        </div>
       
{% endblock %}